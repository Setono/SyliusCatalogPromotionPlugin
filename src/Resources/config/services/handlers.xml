<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="setono_sylius_bulk_specials.handler.abstract"
                 abstract="true">
            <argument type="service" id="logger" />
        </service>

        <service id="setono_sylius_bulk_specials.recalculate_handler.channel_pricing"
                 parent="setono_sylius_bulk_specials.handler.abstract"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\ChannelPricingRecalculateHandler"
                 public="true">
            <argument type="service" id="setono_sylius_bulk_specials.applicator.product_specials" />
        </service>

        <service id="setono_sylius_bulk_specials.handler.eligible_specials_reassign"
                 parent="setono_sylius_bulk_specials.handler.abstract"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\EligibleSpecialsReassignHandler"
                 public="true">
            <argument type="service" id="setono_sylius_bulk_specials.repository.special" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="setono_sylius_bulk_specials.special_eligibility_checker" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.product" />
        </service>

        <service id="setono_sylius_bulk_specials.recalculate_handler.product"
                 parent="setono_sylius_bulk_specials.handler.abstract"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\ProductRecalculateHandler"
                 public="true">
            <argument type="service" id="setono_sylius_bulk_specials.applicator.product_specials" />
        </service>

        <service id="setono_sylius_bulk_specials.recalculate_handler.special"
                 parent="setono_sylius_bulk_specials.handler.abstract"
                 class="Setono\SyliusBulkSpecialsPlugin\Handler\SpecialRecalculateHandler"
                 public="true">
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.product" />
        </service>

    </services>
</container>
