<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true" />

        <service id="setono_sylius_bulk_specials.doctrine_event_listener.channel_pricing"
                 class="Setono\SyliusBulkSpecialsPlugin\EventSubscriber\ChannelPricingDoctrineEventListener">
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.channel_pricing" />

            <tag name="doctrine.event_listener" event="preUpdate" lazy="true" />
            <tag name="doctrine.event_listener" event="postUpdate" lazy="true" />
        </service>

        <service id="setono_sylius_bulk_specials.doctrine_event_listener.product"
                 class="Setono\SyliusBulkSpecialsPlugin\EventSubscriber\ProductDoctrineEventListener">
            <argument type="service" id="setono_sylius_bulk_specials.handler.eligible_specials_reassign" />

            <tag name="doctrine.event_listener" event="postPersist" lazy="true" />
        </service>

        <service id="setono_sylius_bulk_specials.doctrine_event_listener.special"
                 class="Setono\SyliusBulkSpecialsPlugin\EventSubscriber\SpecialDoctrineEventListener">
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.special" />
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.product" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.manager.product" />

            <tag name="doctrine.event_listener" event="preUpdate" lazy="true" />
            <tag name="doctrine.event_listener" event="postUpdate" lazy="true" />
            <tag name="doctrine.event_listener" event="postPersist" lazy="true" />
            <tag name="doctrine.event_listener" event="preRemove" lazy="true" />
        </service>

    </services>
</container>
