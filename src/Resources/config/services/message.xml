<?xml version="1.0" encoding="UTF-8"?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_bulk_specials.message.handler.assign_eligible_specials"
                 class="Setono\SyliusBulkSpecialsPlugin\Message\Handler\AssignEligibleSpecialsHandler">
            <argument type="service" id="setono_sylius_bulk_specials.repository.special"/>
            <argument type="service" id="sylius.repository.product"/>
            <argument type="service" id="setono_sylius_bulk_specials.special_eligibility_checker"/>
            <argument type="service" id="setono_sylius_bulk_specials.recalculate_handler.product"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
