<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="setono_sylius_bulk_specials.form.type.special.validation_groups" type="collection">
            <parameter>setono_sylius_bulk_specials</parameter>
        </parameter>
        <parameter key="setono_sylius_bulk_specials.form.type.special_rule.validation_groups" type="collection">
            <parameter>setono_sylius_bulk_specials</parameter>
        </parameter>
    </parameters>

    <services>
        <defaults public="true" />

        <service id="setono_sylius_bulk_specials.form_registry.special_rule_checker" class="Sylius\Bundle\ResourceBundle\Form\Registry\FormTypeRegistry" />

        <service id="setono_sylius_bulk_specials.form.type.special"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\SpecialType">
            <argument>%setono_sylius_bulk_specials.model.special.class%</argument>
            <argument>%setono_sylius_bulk_specials.form.type.special.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="setono_sylius_bulk_specials.form.type.special_rule"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\SpecialRuleType">
            <argument>%setono_sylius_bulk_specials.model.special_rule.class%</argument>
            <argument>%setono_sylius_bulk_specials.form.type.special_rule.validation_groups%</argument>
            <argument type="service" id="setono_sylius_bulk_specials.form_registry.special_rule_checker" />
            <tag name="form.type" />
        </service>

        <service id="setono_sylius_bulk_specials.form.type.special_rule.collection"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\SpecialRuleCollectionType">
            <argument type="service" id="setono_sylius_bulk_specials.registry_special_rule_checker" />
            <tag name="form.type" />
        </service>

        <service id="setono_sylius_bulk_specials.form.type.special_rule_choice"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\SpecialRuleChoiceType">
            <argument>%setono_sylius_bulk_specials.special_rules%</argument>
            <tag name="form.type" />
        </service>

        <!-- Rules -->
        <service id="sylius.form.type.special_rule.has_taxon_configuration"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\HasTaxonConfigurationType">
            <argument type="service" id="sylius.form.type.data_transformer.taxons_to_codes" />
            <tag name="form.type" />
        </service>

        <service id="sylius.form.type.special_rule.contains_products_configuration"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\ContainsProductsConfigurationType">
            <argument type="service" id="sylius.form.type.data_transformer.products_to_codes" />
            <tag name="form.type" />
        </service>

        <service id="sylius.form.type.special_rule.contains_product_configuration"
                 class="Setono\SyliusBulkSpecialsPlugin\Form\Type\Special\Rule\ContainsProductConfigurationType">
            <argument type="service" id="sylius.repository.product" />
            <tag name="form.type" />
        </service>
    </services>
</container>
