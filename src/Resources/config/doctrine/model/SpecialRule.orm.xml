<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Setono\SyliusBulkSpecialsPlugin\Model\SpecialRule" table="setono_sylius_bulk_specials_special_rule">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" type="string" />
        <field name="configuration" type="array" />

        <many-to-one field="special" target-entity="Setono\SyliusBulkSpecialsPlugin\Model\SpecialInterface" inversed-by="rules">
            <join-column name="special_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
